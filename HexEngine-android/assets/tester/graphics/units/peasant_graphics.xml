<!-- 
	Graphics for the example unit.
	
	ids:
	@SMALL_ICON
	@MEDIUM_ICON
	@LARGE_ICON
	
	@LEFT
	@RIGHT
	@UP
	@DOWN
	@LEFT_UP (o)
	@LEFT_DOWN (o)
	@RIGHT_UP (o)
	@RIGHT_DOWN (o)
	
	@DYING
	@DAMAGED
	
	@IDLE (o)
	
	@SKILL_ANIMATIONS (any number of animations)
-->
<Graphics
    name="Peasant Graphics"
    description="@example_texts/@example_text"
    id="@peasant_graphics"
    src="tester/graphics_elements/textures/peasant.png"
    filter="nearest">
    
    <Sprite
        id="@LARGE_ICON"
        src="tester/graphics_elements/sprites/unit_large_icon.xml"/>
    
    <Animation
        id="@IDLE"
        src="tester/graphics_elements/animations/unit_idle_animation.xml"/>
    
    <Animation
        id="@RIGHT"
        src="tester/graphics_elements/animations/unit_right_animation.xml"/>
   
    <Animation
        id="@LEFT"
        src="tester/graphics_elements/animations/unit_left_animation.xml"/>
    
    <Animation
        id="@DYING"
        src="tester/graphics_elements/animations/unit_die_animation.xml"/>
    
    <Animation
        id="@spit"
        src="tester/graphics_elements/animations/unit_attack_animation.xml"/>
    
    <Animation
        id="@attack"
        src="tester/graphics_elements/animations/unit_attack_animation.xml"/>
    
</Graphics>