<!-- 
	Graphics for a skill.
	
	ids:
	@SMALL_ICON
	@MEDIUM_ICON
	@LARGE_ICON
	
	@CAST
	@PROJECTILE (o)
	@ARRIVAL
	@AFFECT (o)
	@CONSTANT_AFFECT (o)
-->
<Graphics
    name="Spit Graphics"
    id="@spit_graphics"
    src="tester/graphics_elements/textures/spit.png"
    filter="nearest">
    
    <!-- 
    	All animations can be given multiple times, the engine
    	will use them randomly.
    -->
    
    <Sprite
        id="@LARGE_ICON"
        src="tester/graphics_elements/sprites/stat_large_icon.xml"/>
    	
    <Animation
        id="@CAST"
        src="data/graphics/animations/example_animation.xml"/>
    
    <Animation
        id="@PROJECTILE"
        src="tester/graphics_elements/animations/skill_projectile_animation.xml">
    	<Particle file="tester/graphics_elements/particles/spit_flow.p"/>    
    </Animation>

    <Animation
        id="@ARRIVAL"
        src="tester/graphics_elements/animations/skill_projectile_animation.xml">
    	<Particle file="tester/graphics_elements/particles/spit_blow.p"/>
    </Animation>
    
    <Animation
        id="@AFFECT"
        src="data/graphics/animations/example_animation.xml"/>
    
    <Animation
        id="@CONSTANT_AFFECT"
        src="data/graphics/animations/example_animation.xml"/>
    
</Graphics>