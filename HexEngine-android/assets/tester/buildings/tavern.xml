<!-- 
	Example Building. A Building can have
	Upgrades for Stats, can produce units,
	can generate resources.
-->
<Building
    name="Tavern"
    description="@building_descriptions/@peasant_hut"
    id="@tavern"
    duration="1"
    width="1.0"
    height="1.2"
    graphics="@peasant_hut_graphics">
    
    <StatEntries
	    name="Example Stats"
	    description="@example_texts/@example_text"
	    id="@example_stats">
    
        <StatReg
            stat="@MAX_HIT_POINTS"
            value="100"/>
        
        <StatReg
            stat="@HIT_POINTS"
            value="1"/>
    
    </StatEntries>
        
    <AcceptedTiles>
	    <!-- Any free tile is accepted -->
	</AcceptedTiles>
	
    <!-- Resource produced per turn. -->
    <Produce>
        
        <!-- A building can consume produces also with positive value. -->
        <ResourceCost
            resource="@cabbage"
            value="5"/>
        
    </Produce>
    
    <!-- 
    	An upgrade for a unit's stats.
    	It has a cost and additional stats.
    	The values of the Stats will be added to the unit's.
    -->
	<StatUpgrade
		name="Uber Peasant Learning"
		description="@upgrades/@maximum_peasant"
		id="@uber_peasant"
		graphics="@maximum_peasant_graphics"
		unit="@peasant"
		duration="3">
  
		<StatEntries
			name="Example Stats"
			description="@example_texts/@example_text"
			id="@example_stats">
   
			<StatReg
				stat="@MAX_HIT_POINTS"
				value="10"/>
	    
		   	<StatReg
		        stat="@MAX_SPEED"
		        value="1"/>
    
		</StatEntries>

	    <Cost>
	        
	        <ResourceCost
	            resource="@cabbage"
	            value="15"/>
	    
	    </Cost>
      
  </StatUpgrade>
    
</Building>