<!--
	Example Building. A Building can have
	Upgrades for Stats, can produce units,
	can generate resources.
-->
<Building
    id="@odins_hall"
    name="Odin&apos;s Hall"
    description="@building_description/@odins_hall"
    duration="1"
    graphics="@odins_hall_graphics"
    height="1.0"
    width="1.0"
    y="0.85" >

    <StatEntries
        id="@odins_hall_stats"
        name="Stats"
        description="@example_texts/@example_text" >

        <StatReg
            stat="@MAX_HIT_POINTS"
            value="100" />

        <StatReg
            stat="@HIT_POINTS"
            value="1" />

        <StatReg
            stat="@FIELD_OF_VIEW"
            value="1" />

        <StatReg
            stat="@FIELD_OF_HEED"
            value="1" />
    </StatEntries>

    <AcceptedTiles>

        <MapTile tile="@camp" />
    </AcceptedTiles>

    <!-- Resource produced per turn. -->

    <Produce>

        <!-- A building can consume produces also with positive value. -->

        <ResourceCost
            resource="@meat"
            value="1" />
    </Produce>

    <!--
    	Possible units that can be produced at the building.
    	The duration means turns.
    -->

    <UnitProduced
        id="@unit_handyman"
        duration="1"
        unit="@handyman" >

        <Cost>

            <ResourceCost
                resource="@meat"
                value="10" />
        </Cost>
    </UnitProduced>

</Building>