<!--
	Example Building. A Building can have
	Upgrades for Stats, can produce units,
	can generate resources.
-->
<Building
    id="@sawmill"
    name="Sawmill"
    description="@building_description/@sawmill"
    duration="1"
    graphics="@sawmill_graphics"
    height="1.0"
    width="1.0"
    y="0.85" >

    <StatEntries
        id="@sawmill_stats"
        name="Stats"
        description="@example_texts/@example_text" >

        <StatReg
            stat="@MAX_HIT_POINTS"
            value="100" />

        <StatReg
            stat="@HIT_POINTS"
            value="1" />

        <StatReg
            stat="@FIELD_OF_VIEW"
            value="1" />

        <StatReg
            stat="@FIELD_OF_HEED"
            value="1" />
    </StatEntries>

    <AcceptedTiles>

        <MapTile tile="@wood_source" />
    </AcceptedTiles>

    <!-- Resource produced per turn. -->

    <Produce>

        <ResourceCost
            resource="@wood"
            value="1" />
    </Produce>

</Building>