<!--
	Graphics for example stat.
	
	ids:
	@SMALL_ICON
	@MEDIUM_ICON
	@LARGE_ICON
-->
<Graphics
    id="@maximum_peasant_graphics"
    name="Maximum Peasant Graphics"
    filter="nearest"
    src="tester/graphics_elements/textures/hit_points.png" >

    <!--
    	All animations can be given multiple times, the engine
    	will use them randomly.
    -->

    <Sprite
        id="@SMALL_ICON"
        src="tester/graphics_elements/sprites/stat_small_icon.xml" />

    <Sprite
        id="@MEDIUM_ICON"
        src="tester/graphics_elements/sprites/stat_medium_icon.xml" />

    <Sprite
        id="@LARGE_ICON"
        src="tester/graphics_elements/sprites/stat_large_icon.xml" />

</Graphics>