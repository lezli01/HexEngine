	ids:
	@SMALL_ICON
	@MEDIUM_ICON
	@LARGE_ICON
	
	@LEFT
	@RIGHT
	@UP
	@DOWN
	@LEFT_UP (o)
	@LEFT_DOWN (o)
	@RIGHT_UP (o)
	@RIGHT_DOWN (o)
	
	@DYING
	@DAMAGED
	
	@IDLE (o)
	
	@SKILL_ANIMATIONS (any number of animations)
-->
<Graphics
    id="@engineer_graphics"
    name="Engineer Graphics"
    description="@example_texts/@example_text"
    filter="linear"
    src="siegedevils/graphics_elements/textures/units/engineer.png" >

    <Sprite
        id="@LARGE_ICON"
        src="siegedevils/graphics_elements/sprites/unit_large_icon.xml" />

    <Animation
        id="@IDLE"
        src="siegedevils/graphics_elements/animations/unit_idle_animation.xml" />

    <Animation
        id="@DAMAGED"
        src="siegedevils/graphics_elements/animations/unit_idle_animation.xml" >

        <Particle file="siegedevils/graphics_elements/particles/bleed.p" />
    </Animation>

