<Unit
    id="@priest"
    name="Priest"
    description="@unit_descriptions/@priest"
    graphics="@priest_graphics"
    height="0.9"
    race="@dwarfs"
    width="0.75"
    y="0.65" >

    <!-- Stats of the unit. -->

    <StatEntries
        id="@priest_stats"
        name="Stats"
        description="@example_texts/@example_text" >

        <StatReg
            stat="@MAX_HIT_POINTS"
            value="10" />

        <StatReg
            stat="@HIT_POINTS"
            value="10" />

        <StatReg
            stat="@SPEED"
            value="4" />

        <StatReg
            stat="@MAX_SPEED"
            value="4" />

        <StatReg
            stat="@FIELD_OF_VIEW"
            value="4" />

        <StatReg
            stat="@FIELD_OF_HEED"
            value="4" />

        <StatReg
            stat="@strength"
            value="1" />

        <StatReg
            stat="@accuracy"
            value="1" />

        <StatReg
            stat="@wisdom"
            value="1" />

        <StatReg
            stat="@knowledge"
            value="5" />
    </StatEntries>

    <!-- Skills the unit can use. -->

    <SkillEntries
        id="@priest_skills"
        name="Skills"
        description="@example_texts/@example_text" >

        <SkillReg skill="@healing_touch" />
    </SkillEntries>

</Unit>