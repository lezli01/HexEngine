<Unit
    id="@trickster"
    name="Trickster"
    description="@unit_descriptions/@trickster"
    graphics="@trickster_graphics"
    height="0.9"
    race="@goblins"
    width="0.75"
    y="0.65" >

    <!-- Stats of the unit. -->

    <StatEntries
        id="@trickster_stats"
        name="Stats"
        description="@example_texts/@example_text" >

        <StatReg
            stat="@MAX_HIT_POINTS"
            value="80" />

        <StatReg
            stat="@HIT_POINTS"
            value="80" />

        <StatReg
            stat="@SPEED"
            value="3" />

        <StatReg
            stat="@MAX_SPEED"
            value="3" />

        <StatReg
            stat="@FIELD_OF_VIEW"
            value="4" />

        <StatReg
            stat="@FIELD_OF_HEED"
            value="5" />

        <StatReg
            stat="@strength"
            value="4" />

        <StatReg
            stat="@accuracy"
            value="1" />

        <StatReg
            stat="@wisdom"
            value="1" />

        <StatReg
            stat="@knowledge"
            value="1" />
    </StatEntries>

    <!-- Skills the unit can use. -->

    <SkillEntries
        id="@engineer_skills"
        name="Skills"
        description="@example_texts/@example_text" >

        <SkillReg skill="@sword_cut" />
    </SkillEntries>

</Unit>