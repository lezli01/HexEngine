<Unit
    id="@warlock"
    name="Warlock"
    description="@unit_descriptions/@warlock"
    graphics="@warlock_graphics"
    height="0.9"
    race="@dwarfs"
    width="0.75"
    y="0.65" >

    <!-- Stats of the unit. -->

    <StatEntries
        id="@warlock_stats"
        name="Stats"
        description="@example_texts/@example_text" >

        <StatReg
            stat="@MAX_HIT_POINTS"
            value="50" />

        <StatReg
            stat="@HIT_POINTS"
            value="50" />

        <StatReg
            stat="@SPEED"
            value="3" />

        <StatReg
            stat="@MAX_SPEED"
            value="3" />

        <StatReg
            stat="@FIELD_OF_VIEW"
            value="4" />

        <StatReg
            stat="@FIELD_OF_HEED"
            value="3" />

        <StatReg
            stat="@strength"
            value="1" />

        <StatReg
            stat="@accuracy"
            value="1" />

        <StatReg
            stat="@wisdom"
            value="5" />

        <StatReg
            stat="@knowledge"
            value="1" />
    </StatEntries>

    <!-- Skills the unit can use. -->

    <SkillEntries
        id="@warlock_skills"
        name="Skills"
        description="@example_texts/@example_text" >

        <SkillReg skill="@fireball" />
    </SkillEntries>

</Unit>