<!--
	The stat types of the game, all units
	will have these kind of statisctics to exclude
	ambiguity.
	
	Must define:
	@HIT_POINTS
	@SPEED
	@FIELD_OF_VIEW
-->
<Stats
    name="Example Stats"
    description="@example_texts/@example_text"
    id="@example_stats">
    
    <Stat
        name="Max Health Points"
        short_name="MHP"
        description="@example_texts/@example_text"
        id="@MAX_HIT_POINTS"
        graphics="@example_stat_graphics"/>
    
    <Stat
        name="Current Health Points"
        short_name="HP"
        description="@example_texts/@example_text"
        id="@HIT_POINTS"
        graphics="@example_stat_graphics"/>
    
    <Stat
        name="Speed"
        short_name="SPD"
        description="@example_texts/@example_text"
        id="@SPEED"
        graphics="@example_stat_graphics"/>
    
    <Stat
        name="Field of view"
        short_name="Fov"
        description="@example_texts/@example_text"
        id="@FIELD_OF_VIEW"
        graphics="@example_stat_graphics"/>
    
    <Stat
        name="Field of heed"
        short_name="Foh"
        description="@example_texts/@example_text"
        id="@FIELD_OF_HEED"
        graphics="@example_stat_graphics"/>
    
    <Stat
        name="Strength"
        short_name="Str"
        description="@example_texts/@example_text"
        id="@strength"
        graphics="@example_stat_graphics"/>
    
    <Stat
        name="Wisdom"
        short_name="Wis"
        description="@example_texts/@example_text"
        id="@wisdom"
        graphics="@example_stat_graphics"/>
    
</Stats>