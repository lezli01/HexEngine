<!-- 
	Example Building. A Building can have
	Upgrades for Stats, can produce units,
	can generate resources.
-->
<Building
    name="Example Building"
    description="@example_texts/@example_text"
    id="@example_building"
    duration="10"
    graphics="@example_graphics">
    
    <Cost>
        
        <ResourceCost 
            resource="@example_resource"
            value="10"/>
        
    </Cost>

    <AcceptedTiles>
	    
		<MapTile tile="@example_tile"/>
		
	</AcceptedTiles>
	
    
    <!-- 
    	An upgrade for a unit's stats.
    	It has a cost and additional stats.
    	The values of the Stats will be added to the unit's.
    -->
    <StatUpgrade
        name="Example Stat Upgrade"
        description="@example_texts/@example_text"
        id="@example_stat_upgrade"
        unit="@example_unit"
        duration="10">
    
        <StatEntries
    		name="Example Stats"
		    description="@example_texts/@example_text"
		    id="@example_stats">
	    
		    <StatReg
		        stat="@strength"
		        value="10"/>
		    
		</StatEntries>
		
        <Cost>
            
            <ResourceCost
                resource="@example_resource"
                value="10"/>
        
        </Cost>
        
    </StatUpgrade>
    
    <SkillUpgrade
        name="Example Skill Upgrade"
        description="@example_texts/@example_text"
        id="@example_skill_update"
        unit="@example_unit"
        duration="10">
    
        <SkillEntries
	        name="Example Skills"
	        description="@example_texts/@example_text"
	        id="@example_skills">
	    
        	<SkillReg skill="@example_melee_attack"/>
    
    	</SkillEntries>
	    	
		<Cost>
		    
			<ResourceCost
			    resource="@example_resource"
			    value="10"/>
		
		</Cost>
	    	
    </SkillUpgrade>
    
    <!-- 
    	Possible units that can be produced at the building.
    	The duration means turns.
    -->
    <UnitProduced
        unit="@example_unit"
        duration="10">
        
        <Cost>
            
            <ResourceCost
                resource="@example_resource" 
                value="10"/>
            
        </Cost>
        
    </UnitProduced>
    
</Building>