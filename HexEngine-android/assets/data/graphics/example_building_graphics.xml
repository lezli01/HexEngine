<!-- 
	Graphics for the example building.
	
	ids:
	@SMALL_ICON
	@MEDIUM_ICON
	@LARGE_ICON
	
	@IDLE
	@CONSTRUCTING
	@PRODUCING
	@DAMAGED
	@DEMOLISHED
-->
<Graphics
    name="Example Building Graphics"
    id="@example_building_graphics"
    src="data/graphics/textures/example_texture.png">
    
    <!-- 
    	All animations can be given multiple times, the engine
    	will use them randomly.
    -->
    
    <!-- 
		Small icon e.g. for selections.
    -->
    <Sprite
        id="@SMALL_ICON"
        src="data/graphics/sprites/example_sprite.xml"/>

    <!-- 
		Medum icon e.g. for displayon gui.
    -->
    <Sprite
        id="@MEDIUM_ICON"
        src="data/graphics/sprites/example_sprite.xml"/>
    
    <!-- 
		Large icon e.g. for description.
    -->
    <Sprite
        id="@LARGE_ICON"
        src="data/graphics/sprites/example_sprite.xml"/>
    
    <Animation
        id="@IDLE"
        src="data/graphics/animations/example_animation.xml"/>
    
    <UnifiedAnimation
        id="@CONSTRUCTING"
        src="data/graphics/animations/unified_animations/example_unified_animation.xml"/>
    
    <Animation
        id="@PRODUCING"
        src="data/graphics/animations/example_animation.xml"/>
    
    <Animation
        id="@DAMAGED"
        src="data/graphics/animations/example_animation.xml"/>
            
    <Animation
        id="@DEMOLISHED"
        src="data/graphics/animations/example_animation.xml"/>
    
</Graphics>