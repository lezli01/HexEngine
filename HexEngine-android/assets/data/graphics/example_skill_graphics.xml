<!-- 
	Graphics for a skill.
	
	ids:
	@SMALL_ICON
	@MEDIUM_ICON
	@LARGE_ICON
	
	@CAST
	@PROJECTILE (o)
	@ARRIVAL
	@AFFECT (o)
	@CONSTANT_AFFECT (o)
-->
<Graphics
    name="Example Skill Graphics"
    id="@example_skill_graphics"
    src="data/graphics/textures/example_texture.png">
    
    <!-- 
    	All animations can be given multiple times, the engine
    	will use them randomly.
    -->
    
    <!-- 
		Small icon e.g. for selections.
    -->
    <Sprite
        id="@SMALL_ICON"
        src="data/graphics/sprites/example_sprite.xml"/>

    <!-- 
		Medum icon e.g. for displayon gui.
    -->
    <Sprite
        id="@MEDIUM_ICON"
        src="data/graphics/sprites/example_sprite.xml"/>
    
    <!-- 
		Large icon e.g. for description.
    -->
    <Sprite
        id="@LARGE_ICON"
        src="data/graphics/sprites/example_sprite.xml"/>
    	
    <Animation
        id="@CAST"
        src="data/graphics/animations/example_animation.xml"/>
    
    <Animation
        id="@PROJECTILE"
        src="data/graphics/animations/example_animation.xml"/>

    <Animation
        id="@ARRIVAL"
        src="data/graphics/animations/example_animation.xml"/>
    
    <Animation
        id="@AFFECT"
        src="data/graphics/animations/example_animation.xml"/>
    
    <Animation
        id="@CONSTANT_AFFECT"
        src="data/graphics/animations/example_animation.xml"/>
    
</Graphics>