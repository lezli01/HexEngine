<!-- 
	Example Building. A Building can have
	Upgrades for Stats, can produce units,
	can generate resources.
-->
<Building
    name="Ritual Circle"
    description="@building_description/@ritual_circle"
    id="@ritual_circle"
    duration="1"
    width="1.0"
    height="1.0"
    graphics="@ritual_circle_graphics"
    y="0.85">
    
    <StatEntries
	    name="Stats"
	    description="@example_texts/@example_text"
	    id="@ritual_circle_stats">
    
        <StatReg
            stat="@MAX_HIT_POINTS"
            value="100"/>
        
        <StatReg
            stat="@HIT_POINTS"
            value="1"/>
        
    	<StatReg
            stat="@FIELD_OF_VIEW"
            value="1"/>

        <StatReg
            stat="@FIELD_OF_HEED"
            value="1"/>    
    
    </StatEntries>
        
    <AcceptedTiles>
        <MapTile tile="@magic_source"/>
	</AcceptedTiles>
	
    <!-- Resource produced per turn. -->
    <Produce>
    </Produce>
    
    <SkillUpgrade
        name="Drain Energy"
        description="@example_texts/@example_text"
        id="@drain_energy"
        unit="@shaman"
        skill="@drain_energy"
        duration="1">
    
		<Cost>
		    
			<ResourceCost
			    resource="@meat"
			    value="1"/>
		
		</Cost>
	    	
    </SkillUpgrade>
    
    <SkillUpgrade
        name="Curse"
        description="@example_texts/@example_text"
        id="@curse"
        unit="@shaman"
        skill="@curse"
        duration="1">
    
		<Cost>
		    
			<ResourceCost
			    resource="@meat"
			    value="1"/>
		
		</Cost>
	    	
    </SkillUpgrade>
    
    <!-- 
    	Possible units that can be produced at the building.
    	The duration means turns.
    -->
    <UnitProduced
        unit="@shaman"
        id="@unit_shaman"
        duration="1">
        
        <Cost>
            
            <ResourceCost
                resource="@meat"
                value="20"/>
  
        </Cost>
        
    </UnitProduced>
    
</Building>