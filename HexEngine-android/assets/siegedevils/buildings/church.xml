<!-- 
	Example Building. A Building can have
	Upgrades for Stats, can produce units,
	can generate resources.
-->
<Building
    name="Church"
    description="@building_description/@church"
    id="@church"
    duration="1"
    width="1.0"
    height="1.0"
    graphics="@church_graphics"
    y="0.85">
    
    <StatEntries
	    name="Stats"
	    description="@example_texts/@example_text"
	    id="@church_stats">
    
        <StatReg
            stat="@MAX_HIT_POINTS"
            value="100"/>
        
        <StatReg
            stat="@HIT_POINTS"
            value="1"/>
        
    	<StatReg
            stat="@FIELD_OF_VIEW"
            value="1"/>

        <StatReg
            stat="@FIELD_OF_HEED"
            value="1"/>    

</StatEntries>
        
    <AcceptedTiles>
	</AcceptedTiles>
	
    <!-- Resource produced per turn. -->
    <Produce>
    </Produce>
    
    <SkillUpgrade
        name="Bless"
        description="@example_texts/@example_text"
        id="@bless"
        unit="@priest"
        skill="@bless"
        duration="1">
    
		<Cost>
		    
			<ResourceCost
			    resource="@meat"
			    value="1"/>
		
		</Cost>
	    	
    </SkillUpgrade>
    
    <SkillUpgrade
        name="Prayer"
        description="@example_texts/@example_text"
        id="@prayer"
        unit="@priest"
        skill="@prayer"
        duration="1">
    
		<Cost>
		    
			<ResourceCost
			    resource="@meat"
			    value="1"/>
		
		</Cost>
	    	
    </SkillUpgrade>
    
    <!-- 
    	Possible units that can be produced at the building.
    	The duration means turns.
    -->
    <UnitProduced
        unit="@priest"
        id="@unit_priest"
        duration="1">
        
        <Cost>
            
            <ResourceCost
                resource="@meat"
                value="25"/>
  
        </Cost>
        
    </UnitProduced>
    
</Building>