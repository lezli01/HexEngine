<!-- 
	Example Building. A Building can have
	Upgrades for Stats, can produce units,
	can generate resources.
-->
<Building
    name="Archery Field"
    description="@building_description/@archery_field"
    id="@archery_field"
    duration="1"
    width="1.0"
    height="1.0"
    graphics="@archery_field_graphics"
    y="0.85">
    
    <StatEntries
	    name="Stats"
	    description="@example_texts/@example_text"
	    id="@archery_field_stats">
    
        <StatReg
            stat="@MAX_HIT_POINTS"
            value="100"/>
        
        <StatReg
            stat="@HIT_POINTS"
            value="1"/>
        
        <StatReg
            stat="@FIELD_OF_VIEW"
            value="1"/>

        <StatReg
            stat="@FIELD_OF_HEED"
            value="1"/>
    
    </StatEntries>
        
    <AcceptedTiles>
	</AcceptedTiles>
	
    <!-- Resource produced per turn. -->
    <Produce>
    </Produce>
    
    <SkillUpgrade
        name="Heavy Shoot"
        description="@example_texts/@example_text"
        id="@heavy_shoot"
        unit="@crossbower"
        skill="@heavy_shoot"
        duration="1">
    
		<Cost>
		    
			<ResourceCost
			    resource="@meat"
			    value="1"/>
		
		</Cost>
	    	
    </SkillUpgrade>
    
    <SkillUpgrade
        name="Arrow Rain"
        description="@example_texts/@example_text"
        id="@arrow_rain"
        unit="@crossbower"
        skill="@arrow_rain"
        duration="1">
    
		<Cost>
		    
			<ResourceCost
			    resource="@meat"
			    value="1"/>
		
		</Cost>
	    	
    </SkillUpgrade>
    
    <!-- 
    	Possible units that can be produced at the building.
    	The duration means turns.
    -->
    <UnitProduced
        unit="@crossbower"
        id="@unit_crossbower"
        duration="1">
        
        <Cost>
            
            <ResourceCost
                resource="@meat"
                value="8"/>
  
            <ResourceCost
                resource="@wood"
                value="2"/>
            
            <ResourceCost
                resource="@iron"
                value="5"/>
            
        </Cost>
        
    </UnitProduced>
    
</Building>