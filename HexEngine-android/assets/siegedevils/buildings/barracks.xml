<!-- 
	Example Building. A Building can have
	Upgrades for Stats, can produce units,
	can generate resources.
-->
<Building
    name="Barracks"
    description="@building_description/@barracks"
    id="@barracks"
    duration="1"
    width="1.0"
    height="1.0"
    graphics="@barracks_graphics"
    y="0.85">
    
    <StatEntries
	    name="Stats"
	    description="@example_texts/@example_text"
	    id="@barracks_stats">
    
        <StatReg
            stat="@MAX_HIT_POINTS"
            value="100"/>
        
        <StatReg
            stat="@HIT_POINTS"
            value="1"/>
        
    	<StatReg
            stat="@FIELD_OF_VIEW"
            value="1"/>

        <StatReg
            stat="@FIELD_OF_HEED"
            value="1"/>    
            
    </StatEntries>
        
    <AcceptedTiles>
	</AcceptedTiles>
	
    <!-- Resource produced per turn. -->
    <Produce>
    </Produce>
    
    <SkillUpgrade
        name="Haste"
        description="@example_texts/@example_text"
        id="@haste"
        unit="@brute"
        skill="@haste"
        duration="1">
    
		<Cost>
		    
			<ResourceCost
			    resource="@meat"
			    value="1"/>
		
		</Cost>
	    	
    </SkillUpgrade>
    
    <SkillUpgrade
        name="Swing"
        description="@example_texts/@example_text"
        id="@swing"
        unit="@brute"
        skill="@swing"
        duration="1">
    
		<Cost>
		    
			<ResourceCost
			    resource="@meat"
			    value="1"/>
		
		</Cost>
	    	
    </SkillUpgrade>
    
    <!-- 
    	Possible units that can be produced at the building.
    	The duration means turns.
    -->
    <UnitProduced
        unit="@brute"
        id="@unit_brute"
        duration="1">
        
        <Cost>
            
            <ResourceCost
                resource="@meat"
                value="8"/>
  
            <ResourceCost
                resource="@wood"
                value="2"/>
            
            <ResourceCost
                resource="@iron"
                value="4"/>
            
        </Cost>
        
    </UnitProduced>
    
</Building>