<!-- 
	Example Building. A Building can have
	Upgrades for Stats, can produce units,
	can generate resources.
-->
<Building
    name="Sanctuary"
    description="@building_description/@sanctuary"
    id="@sanctuary"
    duration="1"
    width="1.0"
    height="1.0"
    graphics="@sanctuary_graphics"
    y="0.85">
    
    <StatEntries
	    name="Stats"
	    description="@example_texts/@example_text"
	    id="@sanctuary_stats">
    
        <StatReg
            stat="@MAX_HIT_POINTS"
            value="100"/>
        
        <StatReg
            stat="@HIT_POINTS"
            value="1"/>
        
    	<StatReg
            stat="@FIELD_OF_VIEW"
            value="1"/>

        <StatReg
            stat="@FIELD_OF_HEED"
            value="1"/>    
    
    </StatEntries>
        
    <AcceptedTiles>
	    <MapTile tile="@camp"/>
	</AcceptedTiles>
	
    <!-- Resource produced per turn. -->
    <Produce>
        
        <!-- A building can consume produces also with positive value. -->
        <ResourceCost
            resource="@meat"
            value="1"/>
        
    </Produce>
    
    <!-- 
    	Possible units that can be produced at the building.
    	The duration means turns.
    -->
    <UnitProduced
        unit="@engineer"
        id="@unit_engineer"
        duration="1">
        
        <Cost>
            
            <ResourceCost
                resource="@meat"
                value="10"/>
            
        </Cost>
        
    </UnitProduced>
    
</Building>