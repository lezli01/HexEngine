<!-- 
	Example Building. A Building can have
	Upgrades for Stats, can produce units,
	can generate resources.
-->
<Building
    name="Laboratory"
    description="@building_description/@laboratory"
    id="@laboratory"
    duration="1"
    width="1.0"
    height="1.0"
    graphics="@laboratory_graphics"
    y="0.85">
    
    <StatEntries
	    name="Stats"
	    description="@example_texts/@example_text"
	    id="@laboratory_stats">
    
        <StatReg
            stat="@MAX_HIT_POINTS"
            value="100"/>
        
        <StatReg
            stat="@HIT_POINTS"
            value="1"/>
        
    	<StatReg
            stat="@FIELD_OF_VIEW"
            value="1"/>

        <StatReg
            stat="@FIELD_OF_HEED"
            value="1"/>    
    
    </StatEntries>
        
    <AcceptedTiles>
	</AcceptedTiles>
	
    <!-- Resource produced per turn. -->
    <Produce>
    </Produce>
    
    <SkillUpgrade
        name="Adrenalin Potion"
        description="@example_texts/@example_text"
        id="@adrenalin_potion"
        unit="@alchemist"
        skill="@adrenalin_potion"
        duration="1">
    
		<Cost>
		    
			<ResourceCost
			    resource="@meat"
			    value="1"/>
		
		</Cost>
	    	
    </SkillUpgrade>
    
    <SkillUpgrade
        name="Rejuvenation Potion"
        description="@example_texts/@example_text"
        id="@rejuvenation_potion"
        unit="@alchemist"
        skill="@rejuvenation_potion"
        duration="1">
    
		<Cost>
		    
			<ResourceCost
			    resource="@meat"
			    value="1"/>
		
		</Cost>
	    	
    </SkillUpgrade>
    
    <!-- 
    	Possible units that can be produced at the building.
    	The duration means turns.
    -->
    <UnitProduced
        unit="@alchemist"
        id="@unit_alchemist"
        duration="1">
        
        <Cost>
            
            <ResourceCost
                resource="@meat"
                value="25"/>
  
        </Cost>
        
    </UnitProduced>
    
</Building>