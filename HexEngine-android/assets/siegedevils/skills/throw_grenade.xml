<Skill
    name="Throw Grenade"
    id="@throw_grenade"
    description="@skills_description/@throw_grenade"
    range="5"
    graphics="@throw_grenade_graphics"
    cooldown="3"
    area="1"
    speed="2.25"
    projectile_width="1.0"
    projectile_height="1.0"
    affects_on="ENEMY"
    animation="@IDLE">
    
    <Affect
        id="@throw_grenade_hit_points"
        name="Wounded"
        when="1"
        stat="@HIT_POINTS"
        value="throw_grenade_hit_points.lua">
    </Affect>
    
    <Affect
        id="@throw_grenade_speed_down"
        name="Wounded"
        when="1"
        stat="@MAX_SPEED"
        value="throw_grenade_speed_down.lua">
    </Affect>
    
    <Affect
        id="@throw_grenade_speed_up"
        name="Unwounded"
        when="3"
        stat="@MAX_SPEED"
        value="throw_grenade_speed_up.lua">
    </Affect>
    
</Skill>