	Graphics for the example unit.
	
	ids:
	@SMALL_ICON
	@MEDIUM_ICON
	@LARGE_ICON
	
	@LEFT
	@RIGHT
	@UP
	@DOWN
	@LEFT_UP (o)
	@LEFT_DOWN (o)
	@RIGHT_UP (o)
	@RIGHT_DOWN (o)
	
	@DYING
	@DAMAGED
	
	@IDLE (o)
	
	@SKILL_ANIMATIONS (any number of animations)
-->
<Graphics
    name="Handyman Graphics"
    description="@example_texts/@example_text"
    id="@handyman_graphics"
    src="siegedevils/graphics_elements/textures/units/handyman.png"
    filter="linear"
    scml="siegedevils/graphics_elements/scml/handyman/dwarf.scml">
    
    <Sprite
        id="@LARGE_ICON"
        src="siegedevils/graphics_elements/sprites/unit_large_icon.xml"/>
    
    <SCMLAnimation
        id="@IDLE"
        src="Idle"/>
    
    <SCMLAnimation
        id="@WALK"
        src="Walk">
        <Sfx file="siegedevils/sound/sfx/walk.wav"/>
    </SCMLAnimation>
    
    <SCMLAnimation
        id="@ATTACK"
        src="Punch"/>
    
    <Animation
        id="@DAMAGED"
        src="siegedevils/graphics_elements/animations/unit_idle_animation.xml">
        <Particle file="siegedevils/graphics_elements/particles/bleed.p"/>
    </Animation>
    
