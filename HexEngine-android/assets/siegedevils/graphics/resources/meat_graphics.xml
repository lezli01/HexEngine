<!-- 
	Graphics for the example resource.
	
	ids:
	@SMALL_ICON
	@MEDIUM_ICON
	@LARGE_ICON
	
	@IDLE
-->
<Graphics
    name="Meat Graphics"
    id="@meat_graphics"
    src="siegedevils/graphics_elements/textures/resources/meat.png"
    filter="linear">
    
    <!-- 
    	All animations can be given multiple times, the engine
    	will use them randomly.
    -->
    
    <!-- 
		Small icon e.g. for selections.
    -->
    <Sprite
        id="@SMALL_ICON"
        src="siegedevils/graphics_elements/sprites/resource_large_icon.xml"/>

    <!-- 
		Medum icon e.g. for displayon gui.
    -->
    <Sprite
        id="@MEDIUM_ICON"
        src="data/graphics/sprites/example_sprite.xml"/>
    
    <!-- 
		Large icon e.g. for description.
    -->
    <Sprite
        id="@LARGE_ICON"
        src="siegedevils/graphics_elements/sprites/resource_large_icon.xml"/>
    
    <Animation
        id="@IDLE"
        src="data/graphics/animations/example_animation.xml"/>
        
</Graphics>