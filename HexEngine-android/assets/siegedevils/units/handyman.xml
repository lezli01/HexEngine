<Unit
    name="Handyman"
    description="@unit_descriptions/@handyman"
    id="@handyman"
    race="@dwarfs"
    graphics="@handyman_graphics"
    width="0.75"
    height="0.9"
    x="0.5"
    y="1.5">
    
    <!-- Stats of the unit. -->
    <StatEntries
	    name="Stats"
	    description="@example_texts/@example_text"
	    id="@handyman_stats">
    
        <StatReg
            stat="@MAX_HIT_POINTS"
            value="10"/>
        
        <StatReg
            stat="@HIT_POINTS"
            value="10"/>
        
        <StatReg
            stat="@SPEED"
            value="3"/>
        
        <StatReg
            stat="@MAX_SPEED"
            value="3"/>
        
        <StatReg
            stat="@FIELD_OF_VIEW"
            value="3"/>

        <StatReg
            stat="@FIELD_OF_HEED"
            value="5"/>
                
	    <StatReg
	        stat="@strength"
	        value="2"/>
	    
	    <StatReg
	        stat="@accuracy"
	        value="1"/>
	    
	    <StatReg
	        stat="@wisdom"
	        value="1"/>
	    
	    <StatReg
	        stat="@knowledge"
	        value="2"/>
    
	</StatEntries>
    
    <!-- Skills the unit can use. -->
    <SkillEntries
        name="Skills"
        description="@example_texts/@example_text"
        id="@handyman_skills">
	    
        <SkillReg skill="@punch"/>
    
    </SkillEntries>
    
    <!-- Buildings the unit can build. -->
    <BuildingEntries
        name="Building Entries"
        description="@example_texts/@example_text"
        id="@handyman_buildingentries">
        
        <BuildingReg 
            building="@odins_hall"
            unit="@handyman"
            duration="1">
			<Cost>
				<ResourceCost 
					resource="@wood"
					value="10"/>
			</Cost>
        </BuildingReg>
        
        <BuildingReg 
            building="@barracks"
            unit="@handyman"
            duration="1">
			<Cost>
				<ResourceCost 
					resource="@wood"
					value="8"/>
			</Cost>
        </BuildingReg>
        
        <BuildingReg 
            building="@shooting_range"
            unit="@handyman"
            duration="1">
			<Cost>
				<ResourceCost 
					resource="@wood"
					value="15"/>
			</Cost>
        </BuildingReg>
        
        <BuildingReg 
            building="@library"
            unit="@handyman"
            duration="1">
			<Cost>
			    
				<ResourceCost 
					resource="@wood"
					value="20"/>
				
				<ResourceCost 
					resource="@iron"
					value="10"/>
				
			</Cost>
        </BuildingReg>
        
        <BuildingReg 
            building="@church"
            unit="@handyman"
            duration="1">
			<Cost>
			    
				<ResourceCost 
					resource="@wood"
					value="15"/>
				
				<ResourceCost 
					resource="@meat"
					value="10"/>
				
			</Cost>
        </BuildingReg>
        
        <BuildingReg 
            building="@sawmill"
            unit="@handyman"
            duration="1">
			<Cost>
			    
				<ResourceCost 
					resource="@wood"
					value="5"/>
				
				<ResourceCost 
					resource="@iron"
					value="5"/>
				
			</Cost>
        </BuildingReg>
        
        <BuildingReg 
            building="@iron_mine"
            unit="@handyman"
            duration="1">
			<Cost>
			    
				<ResourceCost 
					resource="@wood"
					value="10"/>
				
				<ResourceCost 
					resource="@iron"
					value="2"/>
				
			</Cost>
        </BuildingReg>
        
    </BuildingEntries>
    
</Unit>