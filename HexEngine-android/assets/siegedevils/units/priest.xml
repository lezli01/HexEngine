<Unit
    name="Priest"
    description="@unit_descriptions/@priest"
    id="@priest"
    race="@dwarfs"
    graphics="@priest_graphics"
    width="0.75"
    height="0.9"
    y="0.65">
    
    <!-- Stats of the unit. -->
    <StatEntries
	    name="Stats"
	    description="@example_texts/@example_text"
	    id="@priest_stats">
    
        <StatReg
            stat="@MAX_HIT_POINTS"
            value="10"/>
        
        <StatReg
            stat="@HIT_POINTS"
            value="10"/>
        
        <StatReg
            stat="@SPEED"
            value="4"/>
        
        <StatReg
            stat="@MAX_SPEED"
            value="4"/>
        
        <StatReg
            stat="@FIELD_OF_VIEW"
            value="4"/>

        <StatReg
            stat="@FIELD_OF_HEED"
            value="4"/>
                
	    <StatReg
	        stat="@strength"
	        value="1"/>
	    
	    <StatReg
	        stat="@accuracy"
	        value="1"/>
	    
	    <StatReg
	        stat="@wisdom"
	        value="1"/>
	    
	    <StatReg
	        stat="@knowledge"
	        value="5"/>
    
	</StatEntries>
    
    <!-- Skills the unit can use. -->
    <SkillEntries
        name="Skills"
        description="@example_texts/@example_text"
        id="@priest_skills">
	    
        <SkillReg skill="@healing_touch"/>
    
    </SkillEntries>
    
</Unit>